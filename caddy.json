{
    "apps": {
        "http": {
            "servers": {
                "default": {
                    "listen": [":8080"],
                    "routes": [
                        {
                            "handle": [
                                {
                                    "handler": "response_logger",
                                    "logger_name": "test_logger",
                                    "log_level": "debug",
                                    "include_response_body": true,
                                    "max_body_size": 1048576,
                                    "include_headers": [
                                        "User-Agent",
                                        "Content-Type"
                                    ]
                                },
                                {
                                    "handler": "static_response",
                                    "body": "Hello World! 응답 로거 테스트입니다. JSON 설정을 사용했습니다.",
                                    "status_code": 200
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
